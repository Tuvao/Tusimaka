@model Tusimaka.Models.BetalingsInformasjon

@{
    ViewBag.Title = "RegistrerBetaling";
}

<link href="~/Content/StyleSheet.css" rel="stylesheet" />
<h2>RegistrerBetaling</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Betalingsinformasjon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BestillingsID)
        <div class="form-group">
            <div class="col-md-10">
                <p>KORTNUMMER</p>
                @Html.EditorFor(model => model.Kortnummer, new { htmlAttributes = new { @class = "tekstFelt" } })
                @Html.ValidationMessageFor(model => model.Kortnummer, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10" id="Utlopsmnd">
