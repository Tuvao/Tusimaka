@model Tusimaka.Models.BetalingsInformasjon

@{
    ViewBag.Title = "RegistrerBetaling";
}

<link href="~/Content/StyleSheet.css" rel="stylesheet" />
<h2>Registrer betaling</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Fyll inn betalingsinformasjon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BestillingsID)
        <div class="form-group">
            <div class="col-md-10">
                <p>KORTNUMMER</p>
                @Html.EditorFor(model => model.Kortnummer, new { htmlAttributes = new { @class = "tekstFelt" } })
                @Html.ValidationMessageFor(model => model.Kortnummer, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col col-lg-3 col-md-3 col-sm-4 col-xs-10 sidestill" id="Utlopsmnd">
                <p>UTLØPSMÅNED</p>
                <select id="velgUtlopsmnd" class="tekstFelt" name="Utlopsmnd" required>
                    <option name="MM" disabled selected>MM</option>
                    <option name="jan" value="01" >01</option>
                    <option name="feb" value="02">02</option>
                    <option name="mar" value="03">03</option>
                    <option name="apr" value="04">04</option>
                    <option name="mai" value="05">05</option>
                    <option name="jun" value="06">06</option>
                    <option name="jul" value="07">07</option>
                    <option name="aug" value="08">08</option>
                    <option name="sep" value="09">09</option>
                    <option name="okt" value="10">10</option>
                    <option name="nov" value="11">11</option>
                    <option name="des" value="12">12</option>
                </select>
                @Html.ValidationMessageFor(model => model.Utlopsaar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col col-lg-3 col-md-3 col-sm-4 col-xs-10 sidestill" id="Utlopsaar">
                <p>UTLØPSÅR</p>
                <select id="velgUtlopsaar" class="tekstFelt" name="Utlopsaar" required>
                    <option name="YY" disabled selected>YY</option>
                    <option name="17" value="17">17</option>
                    <option name="18" value="18">18</option>
                    <option name="19" value="19">19</option>
                    <option name="20" value="20">20</option>
                    <option name="21" value="21">21</option>
                    <option name="22" value="22">22</option>
                    <option name="23" value="23">23</option>
                    <option name="24" value="24">24</option>
                    <option name="25" value="25">25</option>
                </select>
                @Html.ValidationMessageFor(model => model.Utlopsaar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col col-lg-3 col-md-3 col-sm-4 col-xs-10 sidestill">
                <p>CVC</p>
                @Html.EditorFor(model => model.CVC, new { htmlAttributes = new { @class = "tekstFelt" } })
                @Html.ValidationMessageFor(model => model.CVC, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10" id="velgkorttype">
                <p>KORTTYPE</p>
                    <select id="velgKorttype" class="tekstFelt" Name ="Korttype" required>
                        <option name="Korttype" disabled selected>Velg korttype</option>
                        <option name="Visa" value="Visa">Visa</option>
                        <option name="Mastercard" value="Mastercard">Mastercard</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Korttype, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Bekreft betaling" name="BekreftBetaling" id="bekreftBetaling" class="knapp" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
