                    <option name="sep">09</option>
                    <option name="okt">10</option>
                    <option name="nov">11</option>
                    <option name="des">12</option>
                </select>
                @Html.ValidationMessageFor(model => model.Utlopsaar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" id="Utlopsaar">
                <p>UTLØPSÅR</p>
                <select id="velgUtlopsaar" class="tekstFelt">
                    <option name="YY" disabled selected>YY</option>
                    <option name="17">17</option>
                    <option name="18">18</option>
                    <option name="19">19</option>
                    <option name="20">20</option>
                    <option name="21">21</option>
                    <option name="22">22</option>
                    <option name="23">23</option>
                    <option name="24">24</option>
                    <option name="25">25</option>
