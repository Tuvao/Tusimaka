            <div class="col-md-10">
                <p>CVC</p>
                @Html.EditorFor(model => model.CVC, new { htmlAttributes = new { @class = "tekstFelt" } })
                @Html.ValidationMessageFor(model => model.CVC, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10">
                <p>KORTTYPE</p>
                @Html.EditorFor(model => model.Korttype, new { htmlAttributes = new { @class = "tekstFelt" } })
