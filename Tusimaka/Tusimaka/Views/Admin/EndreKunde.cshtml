@model Tusimaka.Model.Kunde

@{
    ViewBag.Title = "EndreKunde";
}
<link href="~/Content/StyleSheet.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {
        // Viser navbar-knappene kun når Admin er logget inn.
        $(".navbar-nav").removeAttr("hidden");

        // Gjør om logginn-knapp til loggut-knapp.
        $(".loggInnUt").attr("href", "/Admin/LoggUt");
        $(".loggInnUt").text("LOGG UT");

        // Gir den aktive siden en active-klasse med styling som markerer.
        $(".navbar").find(".active").removeClass("active");
        $(".kundeAdministrer").addClass("active");
    });
</script>

@using (Html.BeginForm())
{
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Endre Kunde</h2>
        </div>
    </div>
        @Html.AntiForgeryToken()

        <div class="form-horizontal header-spacing">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.KundeID)

            <div class="form-group">
                <div class="col-md-1">
                    <p>FORNAVN</p>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Fornavn, new { htmlAttributes = new { @class = "tekstFelt fullStrl" } })
                    @Html.ValidationMessageFor(model => model.Fornavn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">
                    <p>ETTERNAVN</p>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Etternavn, new { htmlAttributes = new { @class = "tekstFelt fullStrl" } })
                    @Html.ValidationMessageFor(model => model.Etternavn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">
                    <p>EPOST</p>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Epost, new { htmlAttributes = new { @class = "tekstFelt fullStrl" } })
                    @Html.ValidationMessageFor(model => model.Epost, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-1">
                    <p>KJØNN</p>
                </div>
                <div class="col-md-4" id="kjonn">
                    <select id="velgKjonn" class="tekstFelt fullStrl" name="kjonn" placeholder="Kjønn" required>
                        <option name="velg" disabled>Velg kjønn</option>
                        @if(Model.Kjonn == "Mann")
                        {
                            <option name="mann" value="Mann" selected>Mann</option>
                        }
                        else
                        {
                            <option name="mann" value="Mann">Mann</option>
                        }
                        @if(Model.Kjonn == "Kvinne")
                        {
                            <option name="kvinne" value="Kvinne" selected>Kvinne</option>
                        }
                        else
                        {
                            <option name="kvinne" value="Kvinne">Kvinne</option>
                        }

                    </select>
                    @Html.ValidationMessageFor(model => model.Kjonn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10 valg">
                    <span class="knapp">@Html.ActionLink("Avbryt", "KundeAdministrer")</span>
                    <input type="submit" value="Lagre" id="lagreKunde" class="knapp" />
                </div>
            </div>
        </div>
    </div>
    }
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
