@model Tusimaka.Model.AdminBruker

@{
    ViewBag.Title = "LoggInn";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
            <fieldset>
                <legend>Logg inn</legend>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Brukernavn)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Brukernavn)
                    @Html.ValidationMessageFor(model => model.Brukernavn)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Passord)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Passord)
                    @Html.ValidationMessageFor(model => model.Passord)
                </div>
                <input type="submit" value="Logg inn" />
                @if (ViewBag.Innlogget)
                {
                    <p style="color:blue">Logget inn</p>
                    <div>
                        @Html.ActionLink("Back to List", "Index") <br />
                        @Html.ActionLink("Innlogget side", "AdminStart") <br />
                        @Html.ActionLink("Administrer Kunder", "KundeAdministrer") <br />
                    </div>
                }
                else
                {
                    <p style="color:red">Ikke logget inn</p>
                }
            </fieldset>
    }
</body>
</html>
