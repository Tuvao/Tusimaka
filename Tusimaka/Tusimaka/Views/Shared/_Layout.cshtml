<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tusimaka Airlines</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header navbar-left" >
                    @Html.ActionLink("TUSIMAKA AIRLINES", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav navbar-nav" hidden>
                    <li class="hjem"><span class="glyphicon glyphicon-home" /></span>@Html.ActionLink("Hjem", "AdminStart", "Admin")</li>
                    <li class="kundeAdministrer"><span class="glyphicon glyphicon-user" /></span>@Html.ActionLink("Administrer kunder", "KundeAdministrer", "Admin")</li>
                    <li class="flyruterAdministrer"><span class="glyphicon glyphicon-plane" /></span>@Html.ActionLink("Administrer flyruter", "FlyruterAdministrer", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="loggInnUt" href="../Admin/loggInn">LOGG INN</a>@*@Html.ActionLink("LOGG INN", "LoggInn", "Admin", new { @class = "loggInnUt" })*@</li>
                </ul>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <footer id="footer">
                <hr/>
                <p>&copy; @DateTime.Now.Year - Copyright Tusimaka Airlines</p>
            </footer>

        </div>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>